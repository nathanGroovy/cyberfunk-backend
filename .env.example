# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (Optional - leave empty for in-memory storage)
# For MySQL/MariaDB:
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
